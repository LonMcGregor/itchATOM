{
  "manifest_version": 2,
  "name": "itch ATOM",
  "version": "1.0.2",

  "description": "Get itch.io ATOM data",

  "icons": {
      "16": "16.png",
      "48": "48.png",
      "128": "128.png"
  },

  "permissions": [
    "https://*.itch.io/*",
    "downloads",
    "storage"
  ],

  "background": {
    "scripts": ["bg.js"],
    "persistent": false
  }
}
